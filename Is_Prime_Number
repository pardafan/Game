/*
	Is Prime Number Function
*/
#include <iostream>
using namespace std;
///////////////////////////////////////
bool Is_Prime(int n)
{
	int i,d_n=0; // d_n : number of divisors of n
	for(i=1;i<=n;i++)
		if(n%i==0)
			d_n++;
	if(d_n==2)
		return true;
	else
		return false;
}
///////////////////////////////////////
int main(void)
{
	int n;
	cout<<"Enter Number n :";
	cin>>n;
	cout<<"Number "<<n<<" Is ";
	if(Is_Prime(n))
		cout<<"Prime";
	else
		cout<<"Not Prime";
	cin.get();
}
